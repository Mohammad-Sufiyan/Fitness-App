<!-- Main Body -->
<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-5 col-md-6 col-12 pb-4">
                <h1>Comments</h1>
                <% if(postData.length){ 
                    postData.forEach(function(row){
                    %>
                <div class="comment mt-4 text-justify float-left"> <img src="<%= row.profile_image?row.profile_image.toString().replace('public\\','\\'):'https://i.imgur.com/yTFUilP.jpg' %>" alt="" class="rounded-circle" width="40" height="40">
                    <h4><%= row.name %></h4> <span>- <%= row.createdAt.toString().substr(0,15) %></span> <br>
                    <p><%= row.txt_msg %></p>
                </div>
                <%    })} %>
                
            </div>
            <div class="col-lg-4 col-md-5 col-sm-4 offset-md-1 offset-sm-1 col-12 mt-4">
                <form action="/discussion" method="post" id="algin-form" role="form">
                    <input type="hidden" name="userID" id="userID" value="<%= session.userInfo?session.userInfo.user._id:'' %>">
                    <div class="form-group">
                        <h4>Leave a comment</h4> <label for="message">Message</label> <textarea name="msg" id="msg"  cols="30" rows="5" class="form-control" style="background-color: black;"></textarea>
                    </div>
                    <div class="form-group"> <button type="submit" id="post" name="post" class="btn">Post Comment</button> </div>
                </form>
            </div>
        </div>
    </div>
</section>

