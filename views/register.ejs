</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3>Sign Up</h3>
                    <div class="d-flex justify-content-end social_icon">
                        <span><i class="fa fa-facebook-square"></i></span>
                        <span><i class="fa fa-google-plus-square"></i></span>
                        <span><i class="fa fa-twitter-square"></i></span>
                    </div>
                               
                </div>
                <div class="card-body">
                    <form action="/user/register" method="post" role="form">
                        <% if(registerData.status==200){ %>
                            <div class="alert alert-success">
                              <!-- you missed this line of code -->
                                <a href="#" class="close ml-5" data-dismiss="alert" aria-label="close">&times;</a>
                                <strong>Success!</strong> <%= registerData.message %>
                              </div>
                            
                              <% }else if(registerData.status==400){ %>
                                <div class="alert alert-danger">
                                    <!-- you missed this line of code -->
                                      <a href="#" class="close ml-5" data-dismiss="alert" aria-label="close">&times;</a>
                                      <strong>Error!</strong> <%= registerData.message %>
                                    </div>
                               <% } %>
                       
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-user"></i></span>
                            </div>
                            <input type="text" class="form-control" placeholder="Full Name" name="name" id="name">
                            
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-phone"></i></span>
                            </div>
                            <input type="text" class="form-control" placeholder="Contact No." name="contact" id="contact">
                            
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-paper-plane"></i></span>
                            </div>
                            <input type="text" class="form-control" placeholder="Email" name="email" id="email">
                            
                        </div>
                        
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-key"></i></span>
                            </div>
                            <input type="password" class="form-control" placeholder="Password" name="password" id="password">
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-key"></i></span>
                            </div>
                            <input type="password" class="form-control" placeholder="Confirm Password" name="confPass" id="confPass">
                            
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Register" class="btn float-right login_btn" name="registerBTN">
                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-center links">
                        Already have an account?<a href="/user/login">Sign In</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </body>

